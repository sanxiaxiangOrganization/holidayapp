/* pages/landscape/landscape_detail/landscape_detail.wxss */
/* 主容器 */
.container{
  padding: 0;
  justify-content: flex-start;
  display: flex;
}
page {
  height: 100%;
}
.swiperBlock {
  width: 100%;
  height: 30%;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.T1{
  margin-left: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  font-size: x-large;
  font-weight: bolder;
}


/* 地点信息和导航按钮的容器及致电容器 */
.location-container,.contact-container {
  margin-top: 10rpx;
  border-bottom: 5rpx solid #f5f5f5;
  padding: 10rpx 20rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-between; /* 两者分布在左右两边 */
  align-items: center; /* 垂直居中对齐 */
}

/* 地点信息 */
.location,.callBlock {
  font-size: large;
  color: #333;
}

/* 图片的样式 */
.icon-image {
  width: 24px; /* 调整图片大小 */
  height: 24px; /* 调整图片大小 */
}


/* 页面总容器 */
.container2 {
  padding: 20px;
  background-color: #f5f5f5;
}
.comment-container {
  padding: 10px;
}

.comment-item {
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.username {
  font-weight: bold;
  font-size: 16px;
  color: #333;
}

/* 内容区 */
.content {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color: #555;
  margin-top: 5px;
  width: 90%;
  gap: 20rpx;
  flex: 1;
}

/* 简介 */
.info-section .title{
  margin-bottom: 10rpx;
}

/* 导航按钮 */
.nav-buttons{
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.nav-btn{
  background-color: rgb(48, 119, 252);
  color: #fff;
}

/* 介绍区 */
.introduction{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.introduction>text{
  flex: 1;
}

/* 底部操作按钮 */
.action-buttons{
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-buttons map#landscapeMap{
  height: 300rpx;
  width: 100%;
}

.bottom {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

.action-btn {
  padding: 10px 20px;
  text-align: center;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
}

.time {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}



/* 评分区域 */
.rating {
  margin-bottom: 30px;
  padding: 15px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.stars {
  font-size: 20px;
}

.review-text {
  margin-top: 10px;
  font-size: 16px;
  color: #666;
}

.review-date {
  margin-top: 5px;
  font-size: 12px;
  color: #aaa;
}

/*介绍、评价那些*/
/* 按钮容器 */
.button-container {
  margin-top: 10rpx;
  padding: 5rpx;
  width: 100%;
}
/* 按钮块 */
.button-block {
  display: flex;
  justify-content: flex-start;
}

/* 自定义按钮样式 */
.custom-button {
  justify-content: center;
  margin-right: 40rpx;
  text-align: center;
  font-weight: bold;
  padding: 5px 10px;
  color: #43c74c;
  cursor: pointer;
  width: 70rpx;
}


/* 介绍内容区域 */
.content-area {
  padding: 20rpx;
  background-color: #f5f5f5;
  margin-top: 10rpx;
  width: 100%;
}
.introBlock{
  padding: 20rpx;
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 25rpx;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/*评论部分*/
.comments-list {
  min-height: 100%; /* 使用 min-height 确保容器的最小高度为 100% */
  box-sizing: border-box;
  display: contents; /* 使用 flexbox 布局 */
  align-items: flex-start; /* 将评论列表内部元素对齐到最左边 */
  flex-grow: 1; /* 让评论列表占据剩余空间 */
}

.comment {
  background-color: white;
    margin-top:30rpx; /* 距离上一个元素20rpx，水平居中 */
    width: 95%;
    height: auto;
    justify-content: center;
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(0, 0, 0, 0.1); /* 设置四条边的边界颜色，较浅色 */
    box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.5); /* 添加阴影效果，只有底边有 */
    border-radius: 8rpx; /* 边框圆角 */
    padding: 10rpx;
    box-sizing: border-box; /* padding不会撑开容器 */

}
/*景点名字部分*/
.landscapeBlock{
  display: flex;
}
.comment-landscape{
  font-size: small;
  color: #666;
}
.comment-landscape2{
  font-weight: bold;
  font-size: small;
  color: #666;
}

.comment-content {
  margin-bottom: 5px;
  word-wrap: break-word; /* 允许在单词内换行 */
  white-space: pre-wrap; /* 保留空白符和换行符 */
}

.comment-tourist,.comment-time {
  font-size: 12px;
  color: #666;
  margin-top: 2px; /* 调整作者和时间戳与内容的距离 */
}

.landscape-swiper {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.landscape-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.landscape-image-single {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
  margin-bottom: 20rpx;
}